<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main"
    android:keepScreenOn="true"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.hacking.tolibals10.MainActivity">

    <TextView
        android:id="@+id/showNickHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorAccent"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/startGameBtn"
        android:src="@drawable/play_btn_img"
        android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/new_nick_img"
        android:src="@drawable/new_nick_image"
        android:background="@color/transparent"
        android:layout_above="@+id/startGameBtn"
        android:layout_toRightOf="@+id/showNickHere"
        android:layout_toEndOf="@+id/showNickHere"
        android:contentDescription="@string/app_name"
        android:onClick="nick"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_best_score_here"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorAccent"/>
</RelativeLayout>

